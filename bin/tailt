#!/usr/bin/perl

# Created on: 2010-09-14 08:51:00
# Create by:  Ivan Wills
# $Id$
# $Revision$, $HeadURL$, $Date$
# $Revision$, $Source$, $Date$

use strict;
use warnings;
use version;
use Scalar::Util;
use List::Util;
#use List::MoreUtils;
use Getopt::Alt qw/get_options/;
use Pod::Usage;
use Data::Dumper qw/Dumper/;
use English qw/ -no_match_vars /;
use FindBin qw/$Bin/;
use Path::Class;
use Tail::Tool;
use Term::Spinner;
use AnyEvent;
use EV;
use IO::Prompt qw/prompt/;
use Try::Tiny;

our $VERSION = version->new('0.0.1');
my ($name)   = $PROGRAM_NAME =~ m{^.*/(.*?)$}mxs;
my $spinner = Term::Spinner->new();

my %option = (
    lines   => 10,
);
my %found_plugins;
my $restart;
my $tt;

if ( !@ARGV ) {
    pod2usage( -verbose => 1 );
}

main();
exit 0;

sub main {
    my %plugins = get_plugins();

    my $opt = get_options(
        \%option,
        'restart|r!',
        'lines|n=i',
        'no_inotify!',
        'Highlight|highlight|h=s@',
        'Match|match|m=s@',
        'Ignore|ignore|i=s@',
        'Replace|replace|r=s@',
        ( map {  "$_|". lc $_. '=s%' } keys %plugins ),
        'verbose|v+',
        'man',
        'help',
        'VERSION!',
    );
    %option = %{ $opt->opt };

    # do stuff here
    for my $key (qw/Highlight Match Ignore Replace/) {
        next if !exists $option{$key};
        $option{$key} = { regex => [@{ $option{$key} }] };
    }

    if ( $option{restart} ) {
        $restart = AE::signal INT => \&restart;
        delete $option{restart};
    }

    $tt = Tail::Tool->new(
        files => \@ARGV,
        #printer => \&printer,
        %option,
    );

    $tt->tail();

    EV::loop;

    return;
}

sub restart {
    print "\n";
    my $files   = join ', ', map { $_->name } @{ $tt->files };
    my $plugins = '';
    my $i       = 1;
    my %done;

    for my $plg ( @{ $tt->pre_process }, @{ $tt->post_process }, sort keys %found_plugins ) {
        my $name = ref $plg || $plg;
        $name =~ s/^(.+::)//xms;

        next if $done{$name}++;

        $plugins .= "\n" if $plugins;
        $plugins .= sprintf "%2d  %s %s", $i++, $name eq $plg ? 'Add' : 'Change', $name;
        if ( ref $plg && $plg->can('summarise') ) {
            $plugins .= ' (' . $plg->summarise . ')';
        }
    }

    print <<"MENU";

$plugins
 f  Change files ($files)
 r  Resume tailing
 q  Quit
MENU

    my @choices = ( 1 .. $i, qw/f r q/ );
    my @onechar = $i < 10 ? ('-one_char') : ();
    my $match
        = @onechar
        ? '^[' . ( join '',  @choices ) . ']$'
        : '^(' . ( join '|', @choices ) . ')$';

    try {
        my $answer = prompt(
            -prompt => 'Enter your choice [' . ( join ',', @choices ) . ']',
            @onechar,
            -require => {
                'Must be one of [' . ( join ', ', @choices ) . ']' => qr/$match/,
            },
        );
    }
    catch {
        exit;
    }
}

sub printer {
    my @lines = @_;
    if (@lines) {
        $spinner->advance;
    }
    else {
        $spinner->clear;
        print {*STDOUT} @lines;
    }
    die "Why isn't this working?\n".@lines."\n";
}

sub get_plugins {
    my %plugins;

    for my $inc (@INC) {
        my $dir = dir($inc, 'Tail', 'Tool', 'Plugin');
        next if !-d $dir;

        my @modules = grep { /[.]pm$/ } $dir->children;

        MODULE:
        for my $module (@modules) {
            my $name = $module->basename;
            $name =~ s/[.]pm//xms;
            next if $found_plugins{$name}++;

            eval { require $module };
            warn $@ if $@;
            next if $EVAL_ERROR;

            next MODULE if $name eq 'Highlight' || $name eq 'Ignore' || $name eq 'Match';

            $module =~ s{$inc/}{}xms;
            $module =~ s{[.]pm}{}xms;
            $module =~ s{/}{::}gxms;
            $plugins{$name} = $module->does('Tail::Tool::RegexRole');
        }
    }

    return %plugins;
}

__DATA__

=head1 NAME

tailt - Tail files using the Tail::Tool library

=head1 VERSION

This documentation refers to tailt version 0.1.

=head1 SYNOPSIS

   tailt [option]

 OPTIONS:
  -o --other         other option

  -v --verbose       Show more detailed option
     --version       Prints the version information
     --help          Prints this help information
     --man           Prints the full documentation for tailt



